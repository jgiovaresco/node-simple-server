{
  "name": "node-simple-server",
  "version": "1.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "yarn lint:eslint && yarn lint:commit && yarn lint:prettier",
    "lint:commit": "commitlint --from=$( git rev-list --tags --max-count=1 )",
    "lint:eslint": "eslint --ext ts .",
    "lint:prettier": "prettier -l {bin,src}/**/*",
    "lint:prettier:fix": "prettier --write {examples,src,test}/**/*"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn build && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "fastify": "^3.6.0",
    "pino-pretty": "^4.3.0",
    "ts-node": "^9.0.0"
  }
}
